{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "references": [
    { "path": "./packages/biosky-appview" }
  ],
  "include": ["scripts/**/*", "prisma.config.ts"],
  "exclude": ["node_modules", "dist", "packages"]
}
